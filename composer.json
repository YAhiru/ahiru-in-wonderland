{
    "name": "y_ahiru/ahiru-in-wonderland",
    "type": "project",
    "license": "proprietary",
    "description": "ahiru in wonderland",
    "require": {
        "php": ">=7.3.0",
        "bear/package": "^1.9"
    },
    "require-dev": {
        "bear/qatools": "^1.9",
        "josegonzalez/dotenv": "^3.2",
        "roave/security-advisories": "dev-master",
        "infection/infection": "^0.14.2",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Wonderland\\": "wonderland/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@setup",
            "cghooks add --ignore-lock"
        ],
        "post-update-cmd": [
            "@setup",
            "cghooks update"
        ],
        "setup": [
            "php bin/setup.php"
        ],
        "compile": "bear.compile 'Wonderland' prod-app ./",
        "test": [
            "phpunit"
        ],
        "tests": [
            "@cs",
            "phpmd src,tests text ./phpmd.xml",
            "@stan",
            "@test"
        ],
        "coverage": [
            "php -dzend_extension=xdebug.so phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "php-cs-fixer fix -v --dry-run",
            "phpcs --standard=phpcs.xml src wonderland;"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v",
            "phpcbf src wonderland tests"
        ],
        "ifc": "infection --threads=4 --filter=$(git diff origin/master --diff-filter=AM --name-only | grep src/ | paste -sd \",\" -) --ignore-msi-with-no-mutations",
        "stan": "phpstan analyse -l max src tests -c phpstan.neon --no-progress",
        "serve": "php -dzend_extension=xdebug.so -S 127.0.0.1:8080 -t public",
        "app": "php bin/app.php",
        "page": "php bin/page.php"
    },
    "scripts-descriptions": {
        "setup": "Setup the project",
        "compile": "Compile autoload and DI scripts",
        "test": "Run unit tests",
        "tests": "Run tests and quality checks",
        "coverage": "Generate test coverage report",
        "cs": "Checks the coding standard",
        "cs-fix": "Fix the coding standard",
        "serve": "Start php built-in server",
        "app": "Request app resource",
        "page": "Request page resource"
    },
    "config": {
        "process-timeout": 0
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "./vendor/bin/php-cs-fixer fix -v --dry-run",
                "./vendor/bin/phpcs --standard=phpcs.xml src wonderland;"
            ],
            "pre-push": [
                "./vendor/bin/php-cs-fixer fix -v --dry-run",
                "./vendor/bin/phpcs --standard=phpcs.xml src wonderland;",
                "./vendor/bin/phpstan analyse -l max src tests -c phpstan.neon --no-progress"
            ]
        }
    }
}
